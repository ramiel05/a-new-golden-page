---
import { processPostDate } from "../../lib/utils";
import Snippet from "../Snippet.astro";

export type Props = {
  title: string;
  description: string;
  url: string;
  timestamp?: string;
};

const { title, description, url, timestamp } = Astro.props;
---

<Snippet title={title} description={description} url={url}>
  <div slot="bonus-corner" class="zag-muted zag-transition flex justify-between items-center">
    {timestamp ? <p>{processPostDate(timestamp)}</p> : null}
  </div>
</Snippet>
