---
import Anchor from "./Anchor.astro";

export type Props = {
  title: string;
  description: string;
  url: string;
};

const { title, description, url } = Astro.props;
---

<div
  class="zag-text zag-transition flex flex-col gap-3 shadow-[10px_10px_0px_0px_rgba(0,0,0,0.75)] shadow-amber-200 p-6 border-4 border-amber-100"
>
  <div class="flex flex-col gap-3 sm:flex-row sm:justify-between">
    <Anchor url={url} class="text-xl">
      {title}
    </Anchor>
    <div class="flex gap-2">
      <slot name="bonus-corner" />
    </div>
  </div>
  <p class="zag-text zag-transition">
    {description}
  </p>
  <slot name="bonus-row" />
</div>
