---
import PageLayout from "../../layouts/PageLayout.astro";
import Section from "../../components/Section.astro";
import PostSnippet from "../../components/posts/PostSnippet.astro";
import { posts } from "../../content/posts";
import List from "../../components/List.astro";
import { pages } from "../../lib/pages";
---

<PageLayout>
  <Section class="my-8">
    <div class="flex items-center gap-4 pt-8 pb-16">
      <h1 class="font-display text-3xl sm:text-4xl leading-loose">
        {pages.find((page) => page.contentType === "posts")!.name}
      </h1>
    </div>
    <List>
      {
        posts.map((project) => (
          <li>
            <PostSnippet
              title={project.title}
              description={project.description}
              url={project.filename}
              timestamp={project.timestamp}
            />
          </li>
        ))
      }
    </List>
  </Section>
</PageLayout>
