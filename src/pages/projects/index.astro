---
import List from "../../components/List.astro";
import ProjectSnippet from "../../components/projects/ProjectSnippet.astro";
import Section from "../../components/Section.astro";
import { projects } from "../../content/projects";
import PageLayout from "../../layouts/PageLayout.astro";
import { pages } from "../../lib/pages";
---

<PageLayout>
  <Section class="py-4 my-8">
    <div class="flex items-center gap-4 pt-8 pb-16">
      <h1 class="font-display text-3xl sm:text-4xl leading-loose">
        {pages.find((page) => page.contentType === "posts")!.name}
      </h1>
    </div>
    <List>
      {
        projects.map((project) => (
          <li>
            <ProjectSnippet
              title={project.title}
              description={project.description}
              url={project.filename}
              githubUrl={project.githubUrl}
              liveUrl={project.liveUrl}
              tags={project.tags ?? []}
            />
          </li>
        ))
      }
    </List>
  </Section>
</PageLayout>
